function theta = atan360(x0,x1,y0,y1)
% thetha = atan360(X
% theta = angle between the two vectors
% x0,y0 initial point
% x1,y1 final point
dx = x1 - x0;
dy = y1 - y0;
if (dx == 0)
    dx = realmin;
end    
if (sign(dx)>=0 && sign(dy)>=0)
    theta = atan(dy/dx);
elseif (sign(dx)>=0 && sign(dy)<=0)
    theta = atan(dy/dx) + 2*pi;
else
    theta = atan(dy/dx) + pi;
end